<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffff"
    android:fillViewport="true"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlRegister"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"/>

            <ImageView
                android:id="@+id/imgSinup"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/signup"
                android:layout_below="@+id/toolbar"/>

            <EditText
                android:id="@+id/etEmailSinup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgSinup"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/etds"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="5dp"
                android:hint="Email"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:id="@+id/etFastNameSinup"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etEmailSinup"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/etds"
                android:drawablePadding="5dp"
                android:hint="Fast name"
                android:inputType="text"
                android:maxLines="1"
                android:padding="15dp"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:id="@+id/etLastNameSinup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etEmailSinup"
                android:layout_marginStart="254dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/etds"
                android:drawablePadding="5dp"
                android:hint="Fast name"
                android:inputType="text"
                android:maxLines="1"
                android:padding="15dp"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:id="@+id/etPasswordSinpu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:hint="Enter your password"
                android:textColor="@color/colorPrimary"
                android:maxLines="1"
                android:maxLength="6"
                android:inputType="numberPassword"
                android:background="@drawable/etds"
                android:layout_below="@+id/etLastNameSinup"
                android:drawableStart="@drawable/ic_pass"
                android:drawablePadding="5dp"/>

            <EditText
                android:id="@+id/etPasswordConromSinpu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:hint="Confrom password"
                android:textColor="@color/colorPrimary"
                android:maxLines="1"
                android:maxLength="6"
                android:inputType="numberPassword"
                android:background="@drawable/etds"
                android:layout_below="@+id/etPasswordSinpu"
                android:drawableStart="@drawable/ic_pass"
                android:drawablePadding="5dp"/>
            <Button
                android:id="@+id/btSingup"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="120dp"
                android:background="@drawable/btds"
                android:text="sing up"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_below="@id/etPasswordConromSinpu"/>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginStart="187dp"
                android:layout_marginEnd="176dp"
                android:layout_marginBottom="258dp"
                android:visibility="invisible" />

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>